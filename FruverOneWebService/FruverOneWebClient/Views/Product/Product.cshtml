@model FruverOneWebClient.Models.ListProduct

@{
    ViewBag.Title = "Product";

}

    <div class="container">
        <h1>@ViewBag.nameList</h1>
        
        <br />
        <div class="row row-cols-1 row-cols-md-3">

            @for (int i = 0; i < Model.lista.Count; i++)
            {
                <div class="card">

                    <div class="card-body">
                        <h5>Producto</h5>
                        <div class="row">
                            <div class="col">
                                <p>@Model.lista[i].Name</p>
                            </div>
                            <div class="col">
                                <p>COD:@Model.lista[i].COD</p>
                            </div>
                        </div>
                    </div>
                    <img src="~/Img/test2.jpg" width="30" height="100" class="card-img-top mr-3" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Descripción</h5>
                        <p class="card-text">@Model.lista[i].Description</p><br />
                        <strong>Cantidad disponible:</strong>&nbsp;@Model.lista[i].Quantity Kg <br />
                        <strong>Precio:</strong>&nbsp;$@Model.lista[i].Price
                    <div class="text-right">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8.5 5a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 .5-.5z" />
                            <path fill-rule="evenodd" d="M8 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0v-2z" />
                            <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>

                        <input type="submit" value="Comprar" name="nameProduct" class="btn btn-primary"
                               onclick="location.href='@Url.Action("viewProduct", "Product",new { nameProduct = @Model.lista[i].Name })'" />

                        <!--
        <a href="#" class="btn btn-primary">Comprar</a>
    -->

                    </div>
                    </div>

                </div>
            }
        </div>
    </div>

