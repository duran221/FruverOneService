
@{
    ViewBag.Title = @ViewBag.Message;
}
<h2>@ViewBag.Message</h2>
@Scripts.Render("~/JS/ProductView.js")

<div class="container">

    @if (@ViewBag.busqueda == true)
    {
        <div class="row">
            <div class="col-10">
                <!--Informacion de producto-->
                <div class="card">
                    <div class="row no-gutters">
                        <div class="col-4">

                            <div class="container">
                                <br />
                                COD:<label id="codProduct">@ViewBag.COD</label>
                                <img src="~/Img/@ViewBag.Image_url" class="card-img" alt="...">
                            </div>

                        </div>
                        <div class="col-7">
                            <div class="row">
                                <div class="col-7">
                                    <div class="card-body">
                                        <h3 class="card-title">@ViewBag.Category</h3>
                                        <p class="card-text">
                                            <strong>Nombre:</strong>&nbsp;<label id="nameProduct">@ViewBag.Name</label> &nbsp;&nbsp;<br />
                                            <strong>Precio:</strong>$<label id="priceProduct">@ViewBag.Price</label>
                                        </p>
                                        <p class="card-text">
                                            <small class="text-muted">

                                                <strong>Descripción:</strong>
                                                <br />
                                                @ViewBag.Description

                                            </small>
                                        </p>
                                        <strong>Cantidad:</strong>&nbsp;

                                        <div class="row">
                                            <div class="col-7">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button id="decreaseProduct" type="button" class="btn btn-success">-</button>
                                                    </div>
                                                    <input id="quantityClient" type="text" disabled class="form-control" value="1" aria-label="Amount (to the nearest dollar)">
                                                    <div class="input-group-append">
                                                        <button id="increaseProduct" type="button" class="btn btn-success">+</button>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <button type="button" id="addCar" class="btn btn-primary">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M8.5 5a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 .5-.5z" />
                                                <path fill-rule="evenodd" d="M8 7.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0v-2z" />
                                                <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                                            </svg>

                                        </button>
                                    </div>
                                </div>

                                <div class="col-5">
                                    <br /><br />
                                    <div class="alert alert-success" role="alert">

                                        <h4>Desc <label id="descProduct">@ViewBag.Desc</label>% </h4>
                                        <br />
                                        <p>
                                            <strong>Total a pagar:</strong>
                                            <label>$<label id="totalProduct">@ViewBag.Price</label></label> <br />
                                            <strong>Cantidad:</strong>
                                            <label id="cantShop">1</label>
                                            <hr />
                                            <small>Lo mejor del campo para tu negocio :)</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-2" >

                <strong>Carrito</strong>
                <div id="listCar"> 
                    
                </div>

            </div>
        </div>
    }
    else
    {

        <div class="container">
            <p>No se encuentra disponiple el producto</p>
            <img src="~/Img/error-404.gif" class="card-img" alt="...">

        </div>
    }



</div>



