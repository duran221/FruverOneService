<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - FruverONE</title>

    <!-- Page-Level CSS -->


    <link href="~/StylesPage/font-awesome.css" rel="stylesheet" />
    <link href="~/StylesPage/style.css" rel="stylesheet" />
    <link href="~/StylesPage/main-style.css" rel="stylesheet" />


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="">

    <div class="container body-content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>

            </button>
            @Html.ActionLink("FruverONE","Frutas", "Product", null, new { @class = "navbar-brand green" })
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Productos
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">@Html.ActionLink("Frutas", "Frutas", "Product")</a>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Verduras", "Verduras", "Product")</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">@Html.ActionLink("Productos Estrellas", "Estrella", "Product")</a>
                    </div>

                </li>
                &nbsp;&nbsp;
                <li class="nav-item">
                    <a class="nav-link">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Registrarse", "Index", "RegisterCustomer", new { area = "" }, new { @class = "underlineHover" })
                            @Html.ActionLink("Inicia Sesión", "Index", "Login", new { area = "" }, new { @class = "underlineHover" })
                        }

                    </a>
                </li>

            </ul>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
            </form>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="pull-right">
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <img src="~/Img/user.png" width="30" />
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">User <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#"><i class="icon-cog"></i> Preferencias</a></li>
                                <li><a href="#"><i class="icon-envelope"></i></a></li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Cerrar Sesion", "Logout", "Login", new { area = "" }, null)</li>
                                
                            </ul>
                        </li>
                    </ul>
                </div>
            }
        </div>
    </nav>
    @RenderBody()
    <hr />
    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year - FruverONE</p>
    </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
